<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">

</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Show all cocktails", root_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Cocktail:</h3>
      <table class="table table-bordered">
          <thead>
            <th>Ingredients: </th>
            <th>Description: </th>
          </thead>
          <tbody>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose">Delete</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <h3>Add an Ingredient</h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, label: 'Ingredient: ', input_html: { class: "dropdown" }, include_hidden: false %>
        <%= f.input :description, label: 'Description: ' %>
        <%= f.button :submit, class: "btn btn-primary", value: "Add Ingredient" %>
      <% end %>
    </div>
  </div>
</div>




